---
import NavBar from "@components/ui/navbar/NavBar.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import FooterComponent from "@components/ui/footer/FooterComponent.astro";

const url = Astro.url.pathname;

import "aos/dist/aos.css";

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/emozziona-logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>

    <ClientRouter />
  </head>
  <body class="bg-[#EDE8D0]">
    {url !== "/" && <NavBar />}
    <slot />

    <FooterComponent />
  </body><script>
    import AOS from "aos";
    AOS.init({
      duration: 800, // Duración de animación
      easing: "ease-out", // Movimiento suave
      once: true, // Se ejecuta solo una vez
    });
  </script>
</html>
